<?xml version="1.0"?>
<Content xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xsd="http://www.w3.org/2001/XMLSchema">
	<Object id="OPENSTACKSTORAGE">
		<Group>
			<Id>GENERAL_GROUP_STORAGE</Id>
			<Name>Storage Configuration</Name>
			<Description>Storage configuration</Description>
			<Type>Main</Type>
			<Children>
				<Prop>
					<Id>BUCKET_NAME</Id>
					<Name>Bucket Name</Name>
					<Description>In OpenStack you create "buckets" to storage objects, choose an unique bucket name. Its like your root folder in OpenStack</Description>
					<Type>Text</Type>
					<Default>MyBucketName</Default>
					<Options>
						<Option type='Required'/>
						<Option type='Secure'/>
					</Options>

				</Prop>
				<Prop>
					<Id>FOLDER_NAME</Id>
					<Name>Folder Name</Name>
					<Description>Folder name to be created inside your bucket to hold objects</Description>
					<Type>Text</Type>
					<Default>Content</Default>
					<Options>
						<Option type='Required'/>
					</Options>

				</Prop>
				<Prop>
					<Id>TENANT_NAME</Id>
					<Name>Tenant Name</Name>
					<Description>The tenant to use against the Identity Service of OpenStack</Description>
					<Type>Text</Type>
					<Default></Default>
					<Options>
						<Option type='Required'/>
					</Options>

				</Prop>
				<Prop>
					<Id>STORAGE_PROVIDER_USER</Id>
					<Name>Storage Username</Name>
					<Description>Username for connecting to OpenStack</Description>
					<Type>Text</Type>
					<Options>
						<Option type='Secure'/>
					</Options>
				</Prop>
				<Prop>
					<Id>STORAGE_PROVIDER_PASSWORD</Id>
					<Name>Storage Password</Name>
					<Description>Password for connecting to OpenStack</Description>
					<Type>Text</Type>
					<Options>
						<Option type='Password'/>
						<Option type='Secure'/>
					</Options>
				</Prop>
				<Prop>
					<Id>SERVER_URL</Id>
					<Name>OpenStack Service Url</Name>
					<Description>Endpoint to connect to OpenStack</Description>
					<Type>Text</Type>
					<Default></Default>
					<Options>
						<Option type='Required'/>
					</Options>

				</Prop>

			</Children>
		</Group>
	</Object>
</Content>